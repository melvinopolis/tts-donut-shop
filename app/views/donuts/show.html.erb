<p id="notice"><%= notice %></p>

<div class="well">
	<legend>
		<h1><%= @donut.name %></h1>
	</legend>
  
	<%= image_tag @donut.image, class: "img-responsive" %>

	<h4>$<%= @donut.price %></h4>

	<p>
	  <%= @donut.description %>
	</p>
</div>




<div class="buttons">
	<%= link_to 'Edit', edit_donut_path(@donut), class: "btn btn-warning" %>  <%= link_to 'Delete', @donut, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %>  <%= link_to 'Back to Menu', donuts_path, class: "btn btn-primary" %>
</div>

