<p id="notice"><%= notice %></p>

<h1>Donut Menu</h1>

<div class="row">
    <% @donuts.each do |donut| %>
        <div class="col-sm-6 col-md-4">
            <div class="thumbnail">
                <%= image_tag donut.image, class: "img-responsive" %>
                <div class="caption">
                    <h3><%= donut.name %></h3>
                    <h4>$<%= donut.price %></h4>
                    <%= link_to "More Info", donut, class: "btn btn-default" %>
                </div>
            </div>
        </div>
    <% end %>
</div>

<div class="buttons">
    <%= link_to 'New Donut', new_donut_path, class: "btn btn-primary" %>
</div>
